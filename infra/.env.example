# =============================================================================
# Copy this file to .env and fill in your values
#   cp .env.example .env
# NEVER commit .env to git — it contains real passwords
# =============================================================================

# ── SQL Server ─────────────────────────────────────────────────────────────────
SA_PASSWORD=YourStrong!Passw0rd

# ── Application DB user (used by the API) ──────────────────────────────────────
APP_DB_USER=app_user
APP_DB_PASSWORD=AppUser!Passw0rd
DB_NAME=YourDatabase

# ── CDC reader (used by Debezium — read-only) ──────────────────────────────────
CDC_USER=cdc_reader
CDC_PASSWORD=CdcReader!Pass0rd

# ── CDC table list (comma-separated, schema.table format) ─────────────────────
CDC_TABLES=dbo.profiles,dbo.users

# ── Kafka topic list for the indexer consumer ─────────────────────────────────
CDC_TABLES_TOPICS=cdc.dbo.profiles,cdc.dbo.users

# ── OpenSearch JVM heap — set to 50% of your available RAM ───────────────────
OS_HEAP=2g

# ── Grafana ────────────────────────────────────────────────────────────────────
GRAFANA_USER=admin
GRAFANA_PASSWORD=Gr@fan@Secure!Pass

# ── App settings ───────────────────────────────────────────────────────────────
APP_ENV=production
LOG_LEVEL=INFO
